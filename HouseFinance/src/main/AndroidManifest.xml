<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hoppingvikings.housefinancemobile"
    android:versionCode="18"
    android:versionName="00.15.01">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".HouseFinanceClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:resizeableActivity="true">

        <activity android:name="hoppingvikings.housefinancemobile.UserInterface.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="hoppingvikings.housefinancemobile.BackgroundService"
            android:exported="false"
            android:stopWithTask="false"/>

        <activity android:name="hoppingvikings.housefinancemobile.UserInterface.DisplayMessageActivity"
            android:label="Display Message">
        </activity>

        <activity android:name=".UserInterface.AddNewBillActivity"
            android:label="Add Bill"/>

        <activity android:name=".UserInterface.AddNewShoppingItemActivity"
            android:label="Add Shopping Item"/>

        <activity android:name=".UserInterface.ViewBillDetailsActivity"
            android:label="Bill Details"/>
    </application>

</manifest>