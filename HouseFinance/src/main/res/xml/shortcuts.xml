        android:icon="@drawable/ic_shortcut_create"
        android:shortcutShortLabel="@string/shortcutShortLabelBill"
        android:shortcutLongLabel="@string/shortcutLongLabelBill"
        android:shortcutDisabledMessage="@string/shortcutDisabledMessageBill">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="hoppingvikings.housefinancemobile"
            android:targetClass="hoppingvikings.housefinancemobile.UserInterface.MainMenuActivity"/>
