        android:shortcutLongLabel="@string/shortcutLongLabelShopping"
        android:shortcutDisabledMessage="@string/shortcutDisabledMessageShopping">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="hoppingvikings.housefinancemobile"
            android:targetClass="hoppingvikings.housefinancemobile.UserInterface.MainMenuActivity"/>
        <intent
            android:action="android.intent.action.VIEW"
