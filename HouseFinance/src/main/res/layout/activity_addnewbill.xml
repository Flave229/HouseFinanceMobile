<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/appToolbar"
            android:title="Add new bill"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="16sp"
            android:id="@+id/nameLabel"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/appToolbar"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:inputType="text"
            android:textSize="24sp"
            android:textColor="#fff"
            android:hint="Enter Bill Name..."
            android:background="#aaa"
            style="@style/Widget.AppCompat.EditText"
            android:maxLines="1"
            android:id="@+id/BillNameEntry"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nameLabel"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount:"
            android:textSize="16sp"
            android:id="@+id/amountLabel"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/BillNameEntry"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="24sp"
            android:textColor="#fff"
            android:hint="Enter Bill Amount..."
            android:background="#aaa"
            style="@style/Widget.AppCompat.EditText"
            android:maxLines="1"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/amountLabel"
            android:id="@+id/BillAmountEntry"
            android:inputType="numberDecimal"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            android:layout_marginLeft="8dp" />

        <TextView
            android:text="Due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dueLabel"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/BillAmountEntry"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:textSize="16sp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/BillDueEntry"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dueLabel"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:textSize="24sp"
            android:background="#aaa"
            android:padding="4dp"
            android:hint="Enter Bill Due Date..." />

        <TextView
            android:text="Who is this for?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whoLabel"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/BillDueEntry"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:textSize="16sp" />

        <CheckBox
            android:text="David Smith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CheckBoxDavid"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/whoLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:checked="true" />

        <CheckBox
            android:text="Victoria Walters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CheckBoxVikki"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/CheckBoxDavid"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/whoLabel"
            android:checked="true" />

        <CheckBox
            android:text="Joshua Marshall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CheckBoxJosh"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/whoLabel"
            app:layout_constraintLeft_toRightOf="@+id/CheckBoxVikki"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:checked="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" />

        <TextView
            android:text="Â£"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/amountLabel" />

        <TextView
            android:text="Bill Type:"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeLabel"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/CheckBoxDavid"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <RadioButton
            android:text="Regular Bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BillTypeRegular"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/typeLabel"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:checked="true" />

        <RadioButton
            android:text="Monthly Recurring Bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BillTypeRecur"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toRightOf="@+id/BillTypeRegular"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/typeLabel" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#555"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submitBill"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>


</android.support.design.widget.CoordinatorLayout>