<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordlayout">

    <android.support.v7.widget.Toolbar
        android:id="@id/appToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:title="Add Shopping Item" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="50dp"
        android:fillViewport="true"
        android:scrollbarStyle="insideOverlay"
        android:paddingBottom="30dp"
        android:clipToPadding="false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:id="@+id/itemNameLayout"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:errorEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ShoppingItemNameEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Item Name..."
                    android:textColorHint="#88ffffff"
                    android:inputType="text|textCapWords"
                    android:maxLines="1"
                    android:textColor="#fff"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/addedByLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Added By: "
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/itemNameLayout"
                app:layout_constraintVertical_chainStyle="packed" />

            <RadioButton
                android:id="@+id/davidRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="David Smith"
                app:layout_constraintTop_toBottomOf="@+id/addedByLabel"
                app:layout_constraintLeft_toLeftOf="@+id/addedByLabel"
                android:layout_marginTop="8dp"/>

            <RadioButton
                android:id="@+id/vikkiRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Victoria Walters"
                app:layout_constraintTop_toBottomOf="@+id/davidRadio"
                app:layout_constraintLeft_toLeftOf="@+id/davidRadio"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/joshRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Joshua Marshall"
                app:layout_constraintTop_toBottomOf="@+id/vikkiRadio"
                app:layout_constraintLeft_toLeftOf="@+id/vikkiRadio"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/whoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who is this for?"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/joshRadio"
                app:layout_constraintVertical_chainStyle="spread_inside"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintVertical_bias="0.07999998"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp" />

            <CheckBox
                android:id="@+id/CheckBoxDavid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="David Smith"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/whoLabel"
                app:layout_constraintLeft_toLeftOf="@+id/whoLabel"
                app:layout_constraintVertical_chainStyle="packed" />

            <CheckBox
                android:id="@+id/CheckBoxVikki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Victoria Walters"
                app:layout_constraintTop_toBottomOf="@+id/CheckBoxDavid"
                app:layout_constraintLeft_toLeftOf="@+id/CheckBoxDavid"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/CheckBoxJosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Joshua Marshall"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/CheckBoxVikki"
                app:layout_constraintLeft_toLeftOf="@+id/CheckBoxVikki"/>
        </android.support.constraint.ConstraintLayout>


    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#555"
        android:layout_gravity="bottom"
        android:id="@+id/relativeLayout"
        app:layout_dodgeInsetEdges="bottom">

        <Button
            android:id="@+id/submitItem"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/addToList"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/addToList"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="Add To Cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/submitItem"/>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>